# transparency - true or false (default)
URxvt*transparent: false
URxvt*transparent: true

# tint with any color; i.e., blue, red, tomato4, olivedrab2, etc.
#   some nice listings are at:
#     http://www.nisrv.com/drupal/?q=node/11
#     http://www.htmlgoodies.com/tutorials/colors/article.php/3478921
URxvt*tintColor: Grey

# shading - 0 to 99 darkens, 101 to 200 lightens.
#   Don't use with tintColor; just use a darker or lighter color instead.
URxvt*shading: 20

# scrollback buffer lines - 65535 is max on most machines (64 is default)
URxvt*saveLines: 12000

# font color (default is black)
URxvt*foreground: White

# background color (prior to tinting) (default is white)
URxvt*background: Grey
URxvt.perl-ext-common: default,matcher,font-size
URxvt.urlLauncher: google-chrome
URxvt*cutchars: "`\"()'*<>[]{|}:="

Xft.hinting: true
Xft.hintstyle: hintslight
Xft.antialias: false
Xft.rgba: none
Xft.dpi: 96

# Inconsolata Settings
URxvt.font: xft:inconsolata for powerline:pixelsize=12:antialias=true:hinting=true
URxvt.boldFont: xft:inconsolata for powerline:bold:pixelsize=12:antialias=true:hinting=true
URxvt.italicFont: xft:inconsolata for powerline:italic:pixelsize=12:antialias=true:hinting=true
URxvt.boldItalicFont: xft:inconsolata for powerline:bold:italic:pixelsize=12:antialias=true:hinting=true
URxvt.letterSpace: -1

# # Inconsolata-dz Settings
# URxvt.font: xft:inconsolata-dz for powerline:pixelsize=12:antialias=true:hinting=true
# URxvt.boldFont: xft:inconsolata-dz for powerline:bold:pixelsize=12:antialias=true:hinting=true
# URxvt.italicFont: xft:inconsolata-dz for powerline:italic:pixelsize=12:antialias=true:hinting=true
# URxvt.boldItalicFont: xft:inconsolata-dz for powerline:bold:italic:pixelsize=12:antialias=true:hinting=true
# URxvt.letterSpace: -1

# keybinding
URxvt.keysym.C-Up:     perl:font-size:increase
URxvt.keysym.C-Down:   perl:font-size:decrease
URxvt.keysym.C-S-Up:   perl:font-size:incglobal
URxvt.keysym.C-S-Down: perl:font-size:decglobal

