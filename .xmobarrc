Config { font = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW L 95
       , commands = [ Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Weather "EDDB" ["-t","<skyCondition> <tempC>Â°C (<hour> GMT)"] 18000
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Com "date" ["+\"%a %_d.%b %H:%M\""] "mydate" 600
                    , Run Network "eth0" [] 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% | %memory% | <fc=#ccccee>%EDDB%</fc> | <fc=#ee9a00>%mydate%</fc>"
       }
