#!/usr/bin/env cap
# vim:ft=ruby

begin
  require 'capistrano_colors'

  capistrano_color_matchers = [
    { :match => /executing command/,      :color => :blue,      :prio => 10, :attribute => :underscore },
    { :match => /^transaction: commit$/,  :color => :magenta,   :prio => 10, :attribute => :blink },
    # { :match => /git/,                    :color => :white,     :prio => 20, :attribute => :reverse },
    { :match => /git/,                    :color => :white,     :prio => 20 },
    { :match => /ext-con-sk-01/,          :color => :blue,      :prio => 10 },
    { :match => /ext-con-sk-02/,          :color => :green,     :prio => 11 },
    { :match => /ext-con-sk-test/,        :color => :blue,      :prio => 10 },
  ]

  colorize( capistrano_color_matchers )
rescue LoadError
  puts "Capistrano Coloring support requires `gem install capistrano_colors`"
end
